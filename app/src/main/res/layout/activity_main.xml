<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/mat"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:text="Masukkan Angka"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nilai1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan nilai 1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>

    <EditText
        android:id="@+id/nilai2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan nilai 2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="Tambah"
            android:backgroundTint="#FF0000"
            android:text="+"
            android:textSize="25sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="Kurang"
            android:backgroundTint="#FF0000"
            android:text="-"
            android:textSize="25sp"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="Kali"
            android:backgroundTint="#FF0000"
            android:text="*"
            android:textSize="25sp"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="Bagi"
            android:backgroundTint="#FF0000"
            android:text="/"
            android:textSize="25sp"
            tools:ignore="OnClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="380dp"
        android:text=""
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDibuatOleh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="2dp"
        android:padding="20dp"
        android:text="Dibuat oleh Setiawan Adi Pamungkas 22.01.53.3011"
        android:textSize="10sp"
        android:textStyle="bold"/>


</RelativeLayout>
